<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- Keep the global-packages cache inside the workspace to avoid permission issues on sandboxed profiles. -->
    <add key="globalPackagesFolder" value=".nuget\\packages" />
  </config>

  <!--
    Local offline feed to allow restores without nuget.org connectivity.
    Populated from the current user's global-packages cache.
  -->
  <packageSources>
    <add key="sigad-offline-feed" value=".nuget\offline-feed" />
  </packageSources>

  <!-- nuget.org is often unreachable in this environment; disable to avoid restore failures -->
  <disabledPackageSources>
    <add key="nuget.org" value="true" />
  </disabledPackageSources>
</configuration>
