{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  
  "mcpServers": {
    "accredia": {
      "command": "python",
      "args": ["C:\\Users\\g.denicolo\\.mcp_accredia\\server.py"]
    }
  },
  
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude\\hooks\\pre-check.ps1",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude\\hooks\\post-check.ps1",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
